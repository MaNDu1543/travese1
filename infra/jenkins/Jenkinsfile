pipeline {
    agent any
    environment {
        AWS_REGION = 'ap-south-1'
        ECR_REGISTRY = '726661503021.dkr.ecr.ap-south-1.amazonaws.com'
        SERVICE_NAME = 'frontend'
        IMAGE_TAG = "${ECR_REGISTRY}/${SERVICE_NAME}:latest"
    }
    stages {
        stage('Build and Push to ECR') {
            steps {
                script {
                    withCredentials([aws(
                        credentialsId: 'aws-ecr-credentials',
                        accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                        secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                    )]) {
                        sh '''
                            #!/bin/bash
                            set -e  # Exit on any failure

                            export AWS_DEFAULT_REGION=${AWS_REGION}

                            # Authenticate with ECR
                            echo "Logging into ECR..."
                            aws ecr get-login-password --region $AWS_DEFAULT_REGION | \
                                docker login --username AWS --password-stdin $ECR_REGISTRY

                            # Build Docker image
                            echo "Building Docker image..."
                            docker build -t $SERVICE_NAME .

                            # Tag the image
                            echo "Tagging image as $IMAGE_TAG"
                            docker tag $SERVICE_NAME:latest $IMAGE_TAG

                            # Push to ECR
                            echo "Pushing image to ECR..."
                            docker push $IMAGE_TAG

                            echo "✅ Image successfully pushed to ECR!"
                        '''
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo 'Proceeding to deploy via Terraform...'
                // Example Terraform steps (uncomment when ready):
                // sh 'terraform init'
                // sh 'terraform apply -auto-approve'
            }
        }
    }
    post {
        failure {
            echo '❌ DEPLOYMENT FAILED!'
        }
        success {
            echo '✅ Deployment successful!'
        }
        always {
            cleanWs()  // ✅ Correct: Use // for comments in Groovy
        }
    }
}
