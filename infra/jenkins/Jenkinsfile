pipeline {
    agent any
    environment {
        AWS_REGION = 'ap-south-1'
        ECR_REGISTRY = '726661503021.dkr.ecr.ap-south-1.amazonaws.com'
        SERVICE_NAME = 'frontend'  // Or use params/matrix
        IMAGE_TAG = "${ECR_REGISTRY}/${SERVICE_NAME}:latest"
    }
    stages {
        stage('Build and Push to ECR') {
            steps {
                script {
                    withCredentials([aws(credentialsId: 'aws-ecr-credentials', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                        sh """
                            # Authenticate with ECR
                            aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}

                            # Build Docker image
                            docker build -t ${SERVICE_NAME} .

                            # Tag image
                            docker tag ${SERVICE_NAME}:latest ${IMAGE_TAG}

                            # Push to ECR
                            docker push ${IMAGE_TAG}
                        """
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo "Proceeding to deploy via Terraform..."
                // Your Terraform steps here
            }
        }
    }
    post {
        failure {
            echo '❌ DEPLOYMENT FAILED!'
        }
        success {
            echo '✅ Deployment successful!'
        }
        always {
            cleanWs()  // Clean workspace
        }
    }
}
